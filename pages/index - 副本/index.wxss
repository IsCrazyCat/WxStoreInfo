/**index.wxss**/

 /** header CSS **/
.header{
    height: 300rpx;
    display: flex;
    flex-direction: column;
    align-items: center;
    background-color: #c81624;
    color: #fff;
}
.search{
    margin:20rpx 0 18rpx 0;
    position: relative;
}
.search-static{
    position: absolute;
    left:232rpx;
    top:10rpx;
    z-index:2;
}
.search input{
    color: #c6c6c6;
    width: 680rpx;
    height:45rpx;
    border-radius: 32rpx;
    -webkit-border-radius : none ;  /*解决iphone safari上的圆角问题*/
    background: #ffffff;
    font-size:24rpx;
    text-align: center;
 }
 .changeImgeView{
   margin-top: -100rpx;
   width: 100%;
 }
.changeImgeView swiper{
  height: 310rpx;
 } 
.changeImgeView image{
   width: 100%;
 } 
 /** storeInfo CSS **/
 .storeInfoView{
   margin-top:10rpx;
   
   height: 100rpx;
 }
 .nav_store_menu:first-child{
   border-left:none;
   margin-left:1%;
 }
 .nav_store_menu{
   border: 1px solid red;
   border-right: none;
   float: left;
   width: 19.5%;
   line-height: 50rpx;
   text-align: center;
   font-size: 30rpx; 
 }
 /* 导航对应内容项 */
.nav_section{
    width:100%;
}
.nav_section_items{
    display:flex;
    flex-direction: row;
    justify-content: space-between;
    padding:30rpx;
    border-bottom:2rpx solid #ddd;
    position: relative;
}
.nav_section_items:active{
    background:#ddd;
}
.nav_section_items .section_image{
    width:170rpx;
    height:158rpx;
}
.nav_section_items .section_image image{
    width:100%;
    height:100%;
}
.nav_section_items .section_cont{
    width:400rpx;
    font-size:26rpx;
    color:#a9a9a9;
    
}
.nav_section_items .section_cont view{
    overflow:hidden;
    text-overflow: ellipsis;
    white-space:nowrap;
    display: block;
}
.nav_section_items .section_cont .section_cont_intro{
    white-space:normal;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
}
.nav_section_items .section_cont .section_cont_sub{
    font-size: 30rpx;
    line-height:60rpx;
    color:#000;
    margin-bottom:10rpx;
}
.nav_section_items .section_cont .section_cont_price{
    font-size:32rpx;
    color:#d24a58;
}
.nav_section_items .section_book{
    width:80rpx;
    height:80rpx;
    font-size:26rpx;
    border-radius:100%;
    background:#d24a58;
    line-height: 80rpx;
    color:#fff;
    text-align: center;
    margin-top:35rpx;
}
.nav{
    display: flex;
    justify-content: space-around;
    font-size:24rpx;
    margin-top: 52rpx;
}
.nav>navigator view{
    display: flex;
    flex-direction: column;
    align-items: center;
}
.nav>navigator view text{
    margin:33rpx 0;
}
.nav-item1>image{
    width: 57rpx;
    height: 47rpx;
}
.nav-item2>image{
    width: 46rpx;
    height: 47rpx;
}
.nav-item3>image{
    width: 54rpx;
    height: 47rpx;
}
.nav-item4>image{
    width: 46rpx;
    height: 47rpx;
}
.section-bar{
    width:100%;
    height:18rpx;
    background: #e9e8ed;
}